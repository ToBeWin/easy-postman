{
  "manifest_version": 3,
  "name": "Easy Postman",
  "version": "1.1",
  "description": "A simplified Postman tool for HTTP request testing, with multilingual support and themes.",
  "default_locale": "en",
  "icons": {
    "16": "./favicon/favicon-96x96.png",
    "48": "./favicon/favicon-96x96.png",
    "128": "./favicon/favicon-96x96.png"
  },
  "action": {
    "default_icon": {
      "128": "./favicon/favicon-96x96.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
